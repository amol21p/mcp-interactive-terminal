{
  "name": "mcp-interactive-terminal",
  "version": "1.0.8",
  "mcpName": "io.github.amol21p/interactive-terminal",
  "description": "MCP server that gives AI agents (Claude Code, Cursor, Windsurf) real interactive terminal sessions â€” run REPLs, SSH, databases, Docker, and any interactive CLI with clean output and smart completion detection",
  "main": "dist/index.js",
  "bin": {
    "mcp-interactive-terminal": "dist/bin.js"
  },
  "type": "module",
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc && chmod +x dist/bin.js dist/index.js",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "postinstall": "node -e \"try{require('fs').chmodSync(require('path').join(require.resolve('node-pty'),'..','..','prebuilds',process.platform+'-'+process.arch,'spawn-helper'),0o755)}catch{}\"",
    "prepublishOnly": "npm run build",
    "inspect": "npx @modelcontextprotocol/inspector dist/index.js"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "terminal",
    "interactive",
    "shell",
    "repl",
    "pty",
    "cli",
    "ssh",
    "claude",
    "anthropic",
    "cursor",
    "ai",
    "ai-agent",
    "ai-tools",
    "llm",
    "tool-use"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/amol21p/mcp-interactive-terminal.git"
  },
  "homepage": "https://github.com/amol21p/mcp-interactive-terminal#readme",
  "bugs": {
    "url": "https://github.com/amol21p/mcp-interactive-terminal/issues"
  },
  "license": "MIT",
  "engines": {
    "node": ">=18.14.1"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@xterm/headless": "^5.5.0",
    "zod": "^3.24.0"
  },
  "optionalDependencies": {
    "node-pty": "^1.0.0",
    "@anthropic-ai/sandbox-runtime": "^0.0.37"
  },
  "devDependencies": {
    "@types/node": "^20.11.0",
    "typescript": "^5.5.0",
    "vitest": "^2.0.0"
  }
}
