{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.amol21p/interactive-terminal",
  "description": "MCP server that gives AI agents real interactive terminal sessions â€” REPLs, SSH, databases, Docker, and any interactive CLI with clean output, smart completion detection, and security controls",
  "repository": {
    "url": "https://github.com/amol21p/mcp-interactive-terminal",
    "source": "github"
  },
  "version": "1.0.7",
  "packages": [
    {
      "registryType": "npm",
      "identifier": "mcp-interactive-terminal",
      "version": "1.0.7",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "description": "Maximum concurrent sessions",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MCP_TERMINAL_MAX_SESSIONS"
        },
        {
          "description": "Enable OS-level kernel sandboxing",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MCP_TERMINAL_SANDBOX"
        },
        {
          "description": "Redact AWS keys, tokens, private keys in output",
          "isRequired": false,
          "format": "string",
          "isSecret": false,
          "name": "MCP_TERMINAL_REDACT_SECRETS"
        }
      ]
    }
  ]
}
